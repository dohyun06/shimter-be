generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id              String @id @default(uuid())
  title           String
  content         String 
  createdAt       DateTime @default(now())
  imageUrl       String?
}

model User {
  id              String @id @default(uuid())
  name           String
  email          String @unique
  password      String
  phoneNumber   String
  deviceId      String
}

model Plant {
  id             String @id @default(uuid())
  logs           Log[]
  diseaseLogs    DiseaseLog[]
}
model DiseaseLog {
  id             String @id @default(uuid())
  disease       String
  description       String
  createdAt       DateTime @default(now()) 
  overcome      Boolean @default(false)

  plant  Plant @relation(fields: [plantId], references: [id])
  plantId String
}

model Log {
  id            String @id @default(uuid())
  description String
  createdAt   DateTime @default(now())
  plant  Plant @relation(fields: [plantId], references: [id])
  plantId String
}